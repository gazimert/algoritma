#include <stdio.h>

int main()
{
    int yukseklik;
    
    do{
        printf("Yükseklik: ");
        scanf("%i",&yukseklik);
    }
    while(yukseklik < 1);
    
    for(int i = 0; i < yukseklik;i++)
    {
        for(int j = 0; j <= i; j++)
        {
            printf("#");
        }
        printf("\n");
    }
    return 0;
}

/* 

Ekran Çıktısı:

#
##
###
####
#####


*/
